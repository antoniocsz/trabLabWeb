<% include header.ejs %>
<% include navbar.ejs %>
<% include sidebar.ejs %>
<h3></h3>

<form action="/salvar_reserva" method="post">
    <div class="row">
        <div class="col m3 "></div>
        <div class="col s12 m6 ">
            <div class="card">
                <div class="card-content">
                    <span class="card-title">Reserva</span>
                    
                    <div>
                        <input type="hidden" name="idreserva" value= "<%= reserva[0].idreserva || null%>" <%= reserva[0].idreserva ? '' : 'disabled' %>>
                    </div>
                    
                    <div class="input-field">
                        <input name='sigla'  id="sigla" type="text" class="validate" value= "<%= reserva[0].sigla || null%>"">
                        <label  class="active" for="sigla">Sigla</label>
                    </div>
                    
                    <div class="input-field">
                      <input name='descricao'  id="descricao" type="text" class="validate" value= "<%= reserva[0].descricao || null%>"">
                      <label  class="active" for="descricao">Descrição</label>
                    </div>
                    
                </div>

                <div class="card-action">
                    <div>
                        <button class="btn waves-effect waves-light blue darken-1 ">Salvar</button>
                    </div>
                </div>

            </div>
        </div>
        <div class="col m3 "></div>
    </div>
</form>

