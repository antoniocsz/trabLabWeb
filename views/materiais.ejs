                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            <% for(var i=0; i< materiais.length; i++) {%>
                <tr>
                    <td><%= materiais[i].material %></td>
                    <td><%= materiais[i].tipo %></td>                    
                    <td><%= materiais[i].sigla %></td>
