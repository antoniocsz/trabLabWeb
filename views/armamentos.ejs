<h3></h3>

 <div class="row">
    <div class="col m3 "></div>
    <div class="col s12 m6 ">
        <div class="card z-depth-5">
        
        <div class="card-content">
        <span class="card-title">Armamentos</span>
        <a href="/novo_armamento" class="waves-effect waves-light btn blue darken-1 right">Novo Armamento</a>
        <table class="striped">
            <thead>
                <tr>
                    <th>Serie</th>
                    <th>Modelo</th>
                    <th>Fabricante</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            <% for(var i=0; i< armamentos.length; i++) {%>
                <tr>
                    <td><%= armamentos[i].serie %></td>
                    <td><%= armamentos[i].modelo %></td>                    
                    <td><%= armamentos[i].fabricante %></td>
                    <td><a href="/editar_armamento/<%= armamentos[i].id %>">Editar</a></td>
                    <td><a href="/deletar_armamento/<%= armamentos[i].id %>">Excluir</a></td>
                </tr>
            <% } %>
            </tbody>
            </table>
        </div>
        
        </div>
    </div>

    <div class="col m3 "></div>
</div>

