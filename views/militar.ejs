<% include header.ejs %>
<% include navbar.ejs %>
<% include sidebar.ejs %>
<h3></h3>

<form action="/salvar_militar" method="post">
    <div class="row">
        <div class="col m3 "></div>
        <div class="col s12 m6 ">
            <div class="card">
                <div class="card-content">
                    <span class="card-title">Militares</span>
                    
                    <div>
                        <input type="hidden" name="idmilitar" value= "<%= militar[0].idmilitar || null%>" <%= militar[0].idmilitar ? '' : 'disabled' %>>
                    </div>
                    
                    <div class="input-field">
                        <input name='posto'  id="posto" type="text" class="validate" value= "<%= militar[0].posto || null%>"">
                        <label class="active" for="posto">Descricão</label>
                    </div>

                    <div class="input-field">
                        <input name='nomeguerra'  id="nomeguerra" type="text" class="validate" value= "<%= militar[0].nomeguerra || null%>"">
                        <label class="active" for="nomeguerra">Descricão</label>
                    </div>

                    <div class="input-field">
                        <select id= "Usuario_idUsuario" name= "Usuario_idUsuario" >
                            <% for(var i=0; i< usuarios.length; i++){ %>
                                <option value= <%= usuarios[i].idUsuario %> > <%=  usuarios[i].nomecompleto%></option>
                            <% } %>
                        </select>
                        <label>Usuário</label>
                    </div>

                </div>


                <div class="card-action">
                    <div>
                        <button class="btn waves-effect waves-light blue darken-1 ">Salvar</button>
                    </div>
                </div>

            </div>
        </div>
        <div class="col m3 "></div>
    </div>
</form>

<% include footer.ejs %>
