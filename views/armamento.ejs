<% include header.ejs %>
<% include navbar.ejs %>
<% include sidebar.ejs %>
<h3></h3>

<form action="/salvar_armamento" method="post">
    <div class="row">
        <div class="col m3 "></div>
        <div class="col s12 m6 ">
            <div class="card">
                <div class="card-content">
                    <span class="card-title">Usuário</span>
                    
                    <div>
                        <input type="hidden" name="id" value= "<%= armamento[0].id || null%>" <%= armamento[0].id ? '' : 'disabled' %>>
                    </div>
                    
                    <div class="input-field">
                        <input name='modelo'  id="modelo" type="text" class="validate" value= "<%= armamento[0].modelo || null%>"">
                        <label  class="active" for="modelo">Modelo</label>
                    </div>
                    
                    <div class="input-field">
                      <input name='numeroserie'  id="numeroserie" type="text" class="validate" value= "<%= armamento[0].numeroserie || null%>"">
                      <label  class="active" for="numeroserie">Nº serie</label>
                    </div>
                    
                    <div class="input-field">
                      <input name='fabricante'  id="fabricante" type="text" class="validate" value= "<%= armamento[0].fabricante || null%>"">
                      <label  class="active" for="fabricante">Fabricante</label>
                    </div>
                </div>

                <div class="card-action">
                    <div>
                        <button class="btn waves-effect waves-light blue darken-1 ">Salvar</button>
                    </div>
                </div>

            </div>
        </div>
        <div class="col m3 "></div>
    </div>
</form>

